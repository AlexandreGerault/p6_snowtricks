<article class="trick flex flex-col rounded-lg shadow-lg overflow-hidden">
    <div class="flex-shrink-0">
        <img class="h-48 w-full object-cover"
             src="/storage/uploads/tricks/{{ image }}"
             alt="Photo d'une figure de {{ title }}"
        />
    </div>
    <div class="flex-1 bg-white p-6 flex flex-col justify-between">
        <div class="flex-1">
            <p class="text-sm font-medium text-indigo-600">
                {{ category }}
            </p>
            <div class="flex gap-2 justify-between">
                <a href="{{ path('show_trick', {slug: slug}) }}" class="block mt-2 hover:underline">
                    <p class="text-xl font-semibold text-gray-900">
                        {{ title }}
                    </p>
                </a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="flex gap-1">
                        <a href="{{ path('edit_trick', {slug: slug}) }}">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                        </a>

                        {#<form action="{{ path('supprimer-une-figure', {name: trick.name}) }}">
                            <button type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </button>
                        </form>#}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</article>